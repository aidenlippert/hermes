# ====================================
# HERMES PRODUCTION ENVIRONMENT
# ====================================

# ==================
# Database (Railway Auto-Set)
# ==================
# Railway automatically sets these:
# DATABASE_URL=postgresql://username:password@host:port/database
# REDIS_URL=redis://host:port

# ==================
# Authentication & Security
# ==================
# Generate with: openssl rand -hex 32
SECRET_KEY=your_production_secret_key_here_change_this

# JWT Algorithm
ALGORITHM=HS256

# Token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Refresh token expiration (days)
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================
# Google AI / Gemini
# ==================
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_gemini_api_key_here

# ==================
# Frontend CORS
# ==================
# Your Vercel deployment URL
FRONTEND_URL=https://your-app.vercel.app

# ==================
# Optional Features
# ==================
# Enable pgvector for semantic agent search
USE_PGVECTOR=true

# Server Port (Railway sets this automatically as $PORT)
# PORT=8000

# ==================
# API Settings
# ==================
# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Max agents per orchestration
MAX_AGENTS_PER_TASK=10

# Task timeout (seconds)
TASK_TIMEOUT=300

# ==================
# Logging
# ==================
LOG_LEVEL=INFO

# Sentry DSN (optional error tracking)
# SENTRY_DSN=your_sentry_dsn_here

# ==================
# Agent Network
# ==================
# Allow public agent registration
ALLOW_PUBLIC_AGENT_REGISTRATION=true

# Require API key for agent registration
AGENT_REGISTRATION_API_KEY=your_agent_registration_key

# Agent health check interval (seconds)
AGENT_HEALTH_CHECK_INTERVAL=300
