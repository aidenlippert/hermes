# ============================================================================
# HERMES CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================================================
# ENVIRONMENT
# ============================================================================
HERMES_ENV=development  # development, staging, production
HERMES_PORT=8000
HERMES_LOG_LEVEL=INFO

# ============================================================================
# DATABASE (PostgreSQL)
# ============================================================================
DATABASE_URL=postgresql+asyncpg://hermes:YOUR_PASSWORD_HERE@localhost:5432/hermes

# Docker Compose PostgreSQL credentials
POSTGRES_USER=hermes
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD_HERE  # Change this!
POSTGRES_DB=hermes

# Enable pgvector for semantic search (requires pgvector extension)
USE_PGVECTOR=true

# ============================================================================
# REDIS
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD_HERE  # Change this!

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================
# JWT Secret (generate with: openssl rand -hex 32)
SECRET_KEY=YOUR_SECRET_KEY_HERE_USE_OPENSSL_RAND_HEX_32

# JWT Algorithm and expiration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours
REFRESH_TOKEN_EXPIRE_DAYS=30

# ============================================================================
# CORS (Frontend Origins)
# ============================================================================
# Development: Comma-separated list is not needed (hardcoded localhost)
# Staging: Comma-separated list of allowed origins
# Production: REQUIRED - Comma-separated list of allowed frontend URLs
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ============================================================================
# AI PROVIDERS
# ============================================================================
# REQUIRED: Google Gemini API Key for intent parsing and planning
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY_HERE

# Optional: OpenAI (for GPT-4, etc.)
OPENAI_API_KEY=your_openai_key_here

# Optional: Anthropic (for Claude)
ANTHROPIC_API_KEY=your_anthropic_key_here

# ============================================================================
# FEDERATION (Agent-to-Agent Communication Across Domains)
# ============================================================================
# Your public domain for federation (e.g., hermes.yourdomain.com)
FEDERATION_DOMAIN=localhost
PUBLIC_DOMAIN=localhost

# Shared secret for HMAC signature verification with federated instances
FEDERATION_SHARED_SECRET=YOUR_FEDERATION_SECRET_HERE

# Require HMAC signature verification (true in production, false in dev)
FEDERATION_HMAC_REQUIRED=false

# ============================================================================
# DOCKER / PGADMIN (Development Only)
# ============================================================================
PGADMIN_EMAIL=admin@hermes.ai
PGADMIN_PASSWORD=YOUR_PGADMIN_PASSWORD_HERE

# ============================================================================
# RATE LIMITING
# ============================================================================
# Automatic based on subscription tier, but you can override defaults:
# FREE_TIER_LIMIT=10  # requests per minute
# PRO_TIER_LIMIT=100
# ENTERPRISE_TIER_LIMIT=1000
# AGENT_TIER_LIMIT=500

# ============================================================================
# TRUST SCORE RECALCULATION
# ============================================================================
# How often to recalculate agent trust scores (in seconds)
TRUST_RECALC_INTERVAL_SECONDS=900  # 15 minutes

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_A2A_PROTOCOL=true
ENABLE_MCP_FALLBACK=true
ENABLE_ANALYTICS=false

# ============================================================================
# MONITORING & OBSERVABILITY (Optional)
# ============================================================================
# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# ============================================================================
# PRODUCTION DEPLOYMENT
# ============================================================================
# When deploying to Railway, Render, or cloud platforms:
# 1. Set HERMES_ENV=production
# 2. Use managed PostgreSQL and Redis URLs
# 3. Set strong SECRET_KEY
# 4. Configure CORS_ORIGINS with your frontend domain
# 5. Set GOOGLE_API_KEY
# 6. Enable FEDERATION_HMAC_REQUIRED=true
# 7. Set FEDERATION_DOMAIN to your public domain

# Example Production DATABASE_URL:
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/database

# Example Production REDIS_URL:
# REDIS_URL=redis://:password@host:6379
