# Hermes Configuration
# Copy this to .env and fill in your API keys

# OpenAI (for GPT-4, etc.)
OPENAI_API_KEY=your_openai_key_here

# Google AI (for Gemini, A2A, etc.)
GOOGLE_API_KEY=your_google_key_here

# Anthropic (for Claude, if using)
ANTHROPIC_API_KEY=your_anthropic_key_here

# Hermes Settings
HERMES_ENV=development
HERMES_PORT=8000
HERMES_LOG_LEVEL=INFO

# Database (when we add persistence)
DATABASE_URL=sqlite:///hermes.db

# Feature Flags
ENABLE_A2A_PROTOCOL=true
ENABLE_MCP_FALLBACK=true
ENABLE_ANALYTICS=false
